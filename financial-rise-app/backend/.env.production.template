# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values
# NEVER commit .env.production to version control

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://app.financialrise.com

# Database Configuration
DATABASE_HOST=<CLOUD_SQL_PRIVATE_IP>
DATABASE_PORT=5432
DATABASE_USER=financial_rise_prod
DATABASE_PASSWORD=<STORED_IN_SECRET_MANAGER>
DATABASE_NAME=financial_rise_prod

# Database SSL/TLS Configuration (REQUIRED IN PRODUCTION)
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true
DATABASE_SSL_CA=/etc/secrets/cloudsql/server-ca.pem

# JWT Configuration
# Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=<STORED_IN_SECRET_MANAGER>
JWT_EXPIRY=15m
REFRESH_TOKEN_SECRET=<STORED_IN_SECRET_MANAGER>
REFRESH_TOKEN_EXPIRY=7d

# Encryption Keys (REQUIRED - See ENCRYPTION-DOCUMENTATION.md)
ENCRYPTION_KEY=<STORED_IN_SECRET_MANAGER>

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=/etc/secrets/gcp-service-account-key.json
GCS_BUCKET_NAME=financial-rise-reports-prod

# CORS Configuration
CORS_ORIGIN=https://app.financialrise.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_PII_MASKING=true

# Security
HELMET_CSP_ENABLED=true
CSRF_ENABLED=true

# Monitoring
ENABLE_APM=true
APM_SERVER_URL=<APM_SERVER_URL>
