  "questions": [
    {
      "id": "special-confidence-before",
      "question_text": "Before this assessment, how confident do you feel about your business's financial health?",
      "question_type": "scale",
      "scale_min": 1,
      "scale_max": 10,
      "scale_min_label": "Not confident at all",
      "scale_max_label": "Very confident",
      "required": true,
      "order": 1,
      "category": "confidence_assessment",
      "timing": "pre_assessment",
      "note": "REQ-QUEST-009: Before assessment confidence to measure value delivered"
    },
    {
      "id": "special-confidence-after",
