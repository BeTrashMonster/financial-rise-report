      "scale_min": 1,
      "scale_max": 10,
      "scale_min_label": "Not confident at all",
      "scale_max_label": "Very confident",
      "required": true,
      "order": 2,
      "category": "confidence_assessment",
      "timing": "post_report",
      "note": "REQ-QUEST-009: After assessment confidence to measure value delivered"
