import { render, screen, waitFor } from '@testing-library/react';
import userEvent from '@testing-library/user-event';
import { describe, it, expect, vi, beforeEach } from 'vitest';
import { BrowserRouter } from 'react-router-dom';
import { CreateAssessment } from '../CreateAssessment';
import { apiService } from '@/services/api';
import { useAssessmentStore } from '@/store/assessmentStore';
import { Assessment, AssessmentStatus } from '@/types';

// Mock dependencies
vi.mock('@/services/api');
vi.mock('@/store/assessmentStore');

const mockNavigate = vi.fn();
vi.mock('react-router-dom', async () => {
  const actual = await vi.importActual('react-router-dom');
  return {
    ...actual,
    useNavigate: () => mockNavigate,
  };
});

describe('CreateAssessment', () => {
  const mockAddAssessment = vi.fn();

  beforeEach(() => {
    vi.clearAllMocks();

    (useAssessmentStore as any).mockReturnValue({
      addAssessment: mockAddAssessment,
    });
  });

  const renderWithRouter = () => {
    return render(
      <BrowserRouter>
        <CreateAssessment />
      </BrowserRouter>
    );
  };

  it('should render page title', () => {
    renderWithRouter();
    expect(screen.getByText('Create New Assessment')).toBeInTheDocument();
  });

  it('should render page description', () => {
    renderWithRouter();
    expect(screen.getByText('Enter the client information to begin a new financial readiness assessment.')).toBeInTheDocument();
  });

  it('should render all form fields', () => {
    renderWithRouter();
    expect(screen.getByLabelText(/Client Name/i)).toBeInTheDocument();
    expect(screen.getByLabelText(/Business Name/i)).toBeInTheDocument();
    expect(screen.getByLabelText(/Client Email/i)).toBeInTheDocument();
    expect(screen.getByLabelText(/Notes \(Optional\)/i)).toBeInTheDocument();
  });

  it('should render action buttons', () => {
    renderWithRouter();
    expect(screen.getByRole('button', { name: /Cancel/i })).toBeInTheDocument();
    expect(screen.getByRole('button', { name: /Create Assessment/i })).toBeInTheDocument();
  });

  it('should navigate to dashboard when Cancel is clicked', async () => {
    const user = userEvent.setup();
    renderWithRouter();

    await user.click(screen.getByRole('button', { name: /Cancel/i }));
    expect(mockNavigate).toHaveBeenCalledWith('/dashboard');
  });

  it('should show validation error for empty client name', async () => {
    const user = userEvent.setup();
    renderWithRouter();

    const clientNameInput = screen.getByLabelText(/Client Name/i);
    await user.click(clientNameInput);
    await user.tab(); // Blur the field

    await waitFor(() => {
      expect(screen.getByText('Client name is required')).toBeInTheDocument();
    });
  });

  it('should show validation error for empty business name', async () => {
    const user = userEvent.setup();
    renderWithRouter();

    const businessNameInput = screen.getByLabelText(/Business Name/i);
    await user.click(businessNameInput);
    await user.tab(); // Blur the field

    await waitFor(() => {
      expect(screen.getByText('Business name is required')).toBeInTheDocument();
    });
  });

  it('should show validation error for invalid email', { timeout: 15000 }, async () => {
    const user = userEvent.setup();
    renderWithRouter();

    const emailInput = screen.getByLabelText(/Client Email/i);
    await user.type(emailInput, 'invalid-email');
    await user.tab(); // Blur the field

    await waitFor(() => {
      expect(screen.getByText('Invalid email address')).toBeInTheDocument();
    });
  });

  it('should show validation error for client name exceeding max length', { timeout: 15000 }, async () => {
    const user = userEvent.setup();
    renderWithRouter();

    const longName = 'a'.repeat(101);
    const clientNameInput = screen.getByLabelText(/Client Name/i);
    await user.type(clientNameInput, longName);
    await user.tab();

    await waitFor(() => {
      expect(screen.getByText('Client name must be 100 characters or less')).toBeInTheDocument();
    });
  });

  it('should successfully create assessment with valid data', async () => {
    const user = userEvent.setup();
    const mockAssessment: Assessment = {
      assessmentId: 'new-assessment-123',
      clientName: 'John Doe',
      businessName: 'Acme Corp',
      clientEmail: 'john@acme.com',
      status: AssessmentStatus.DRAFT,
      progress: 0,
      createdAt: '2025-12-20T10:00:00Z',
      updatedAt: '2025-12-20T10:00:00Z',
    };

    (apiService.createAssessment as any).mockResolvedValue(mockAssessment);

    renderWithRouter();

    await user.type(screen.getByLabelText(/Client Name/i), 'John Doe');
    await user.type(screen.getByLabelText(/Business Name/i), 'Acme Corp');
    await user.type(screen.getByLabelText(/Client Email/i), 'john@acme.com');
    await user.type(screen.getByLabelText(/Notes \(Optional\)/i), 'Initial consultation notes');

    await user.click(screen.getByRole('button', { name: /Create Assessment/i }));

    await waitFor(() => {
      expect(apiService.createAssessment).toHaveBeenCalledWith({
        clientName: 'John Doe',
        businessName: 'Acme Corp',
        clientEmail: 'john@acme.com',
        notes: 'Initial consultation notes',
      });
      expect(mockAddAssessment).toHaveBeenCalledWith(mockAssessment);
      expect(mockNavigate).toHaveBeenCalledWith('/assessment/new-assessment-123');
    });
  });

  it('should create assessment without optional notes', async () => {
    const user = userEvent.setup();
    const mockAssessment: Assessment = {
      assessmentId: 'new-assessment-456',
      clientName: 'Jane Smith',
      businessName: 'Smith LLC',
      clientEmail: 'jane@smithllc.com',
      status: AssessmentStatus.DRAFT,
      progress: 0,
      createdAt: '2025-12-20T10:00:00Z',
      updatedAt: '2025-12-20T10:00:00Z',
    };

    (apiService.createAssessment as any).mockResolvedValue(mockAssessment);

    renderWithRouter();

    await user.type(screen.getByLabelText(/Client Name/i), 'Jane Smith');
    await user.type(screen.getByLabelText(/Business Name/i), 'Smith LLC');
    await user.type(screen.getByLabelText(/Client Email/i), 'jane@smithllc.com');

    await user.click(screen.getByRole('button', { name: /Create Assessment/i }));

    await waitFor(() => {
      expect(apiService.createAssessment).toHaveBeenCalledWith({
        clientName: 'Jane Smith',
        businessName: 'Smith LLC',
        clientEmail: 'jane@smithllc.com',
        notes: '',
      });
    });
  });

  it('should display error message when API call fails', { timeout: 15000 }, async () => {
    const user = userEvent.setup();
    (apiService.createAssessment as any).mockRejectedValue({
      response: { data: { error: { message: 'Failed to create assessment' } } },
    });

    renderWithRouter();

    await user.type(screen.getByLabelText(/Client Name/i), 'John Doe');
    await user.type(screen.getByLabelText(/Business Name/i), 'Acme Corp');
    await user.type(screen.getByLabelText(/Client Email/i), 'john@acme.com');

    await user.click(screen.getByRole('button', { name: /Create Assessment/i }));

    await waitFor(() => {
      expect(screen.getByText('Failed to create assessment')).toBeInTheDocument();
    });

    // Should not navigate on error
    expect(mockNavigate).not.toHaveBeenCalled();
  });

  it('should disable form during submission', async () => {
    const user = userEvent.setup();
    let resolveCreate: any;
    const createPromise = new Promise((resolve) => {
      resolveCreate = resolve;
    });
    (apiService.createAssessment as any).mockReturnValue(createPromise);

    renderWithRouter();

    await user.type(screen.getByLabelText(/Client Name/i), 'John Doe');
    await user.type(screen.getByLabelText(/Business Name/i), 'Acme Corp');
    await user.type(screen.getByLabelText(/Client Email/i), 'john@acme.com');

    await user.click(screen.getByRole('button', { name: /Create Assessment/i }));

    // Check that button text changes
    await waitFor(() => {
      expect(screen.getByText('Creating...')).toBeInTheDocument();
    });

    // Check that inputs are disabled
    expect(screen.getByLabelText(/Client Name/i)).toBeDisabled();
    expect(screen.getByLabelText(/Business Name/i)).toBeDisabled();
    expect(screen.getByLabelText(/Client Email/i)).toBeDisabled();

    // Resolve the promise
    resolveCreate({
      assessmentId: 'new-123',
      clientName: 'John Doe',
      businessName: 'Acme Corp',
      status: AssessmentStatus.DRAFT,
      progress: 0,
      createdAt: '2025-12-20T10:00:00Z',
      updatedAt: '2025-12-20T10:00:00Z',
    });
  });

  it('should have accessible form fields', () => {
    renderWithRouter();

    const clientNameInput = screen.getByLabelText(/Client Name/i);
    const businessNameInput = screen.getByLabelText(/Business Name/i);
    const emailInput = screen.getByLabelText(/Client Email/i);

    expect(clientNameInput).toHaveAttribute('aria-required', 'true');
    expect(businessNameInput).toHaveAttribute('aria-required', 'true');
    expect(emailInput).toHaveAttribute('aria-required', 'true');
  });

  it('should enforce max length on notes field', () => {
    renderWithRouter();
    const notesInput = screen.getByLabelText(/Notes \(Optional\)/i);
    expect(notesInput).toHaveAttribute('maxLength', '1000');
  });

  it('should show helper text for notes field', () => {
    renderWithRouter();
    expect(screen.getByText('Additional notes about this assessment')).toBeInTheDocument();
  });
});
