# ============================================================================
# Financial RISE Backend - Environment Configuration Example
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://postgres:password@localhost:5432/financial_rise

# Connection pool settings
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret - MUST BE SET (generate with: openssl rand -base64 32)
JWT_SECRET=your-256-bit-secret-key-here-CHANGE-THIS

# Bcrypt work factor (10-12 recommended, higher = more secure but slower)
BCRYPT_ROUNDS=12

# ============================================================================
# CORS
# ============================================================================
# Allowed frontend origin
CORS_ORIGIN=http://localhost:3001

# ============================================================================
# RATE LIMITING
# ============================================================================
# General API rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# ============================================================================
# EMAIL (Optional - for password reset, notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password
# FROM_EMAIL=noreply@financialrise.com

# ============================================================================
# AWS (Optional - for PDF storage)
# ============================================================================
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=financial-rise-reports

# ============================================================================
# DEVELOPMENT / TESTING
# ============================================================================
# Set to 'true' to enable detailed SQL query logging
# DEBUG_SQL=false

# Set to 'true' to seed database with test data
# SEED_DATABASE=false
